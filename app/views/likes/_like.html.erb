<% if current_user.already_liked?(@post_review) %>
  <%= link_to image_tag("icon_red_heart.png", size: 20), post_review_like_path(@post_review.id), data: {"turbolinks" => false}, method: :delete, remote: true %>
  <strong><%= @post_review.likes.count %></strong>
<% else %>
  <%= link_to image_tag("icon_heart.png", size: 20), post_review_likes_path(@post_review.id), data: {"turbolinks" => false}, method: :post, remote: true %>
  <strong><%= @post_review.likes.count %></strong>
<% end %>